<% if(page.prev || page.next) { %>
    <div class="flex items-center justify-center pa4">
        <a rel="prev" href="<%- config.root %><%- page.prev_link %>" 
            class="f5 no-underline inline-flex items-center pa3 ba border-box mr4 <%- page.prev ? 'gray hover-border-main-color hover-text-main-color' : 'light-gray cursor-default' %>">
            <span class="w1 pr2 ec">◀</span>
            <span class="pl1"><%- __('prev') %></span>
        </a>
        <a rel="next" href="<%- config.root %><%- page.next_link %>" 
            class="f5 no-underline inline-flex items-center pa3 ba border-box <%- page.next ? 'gray hover-border-main-color hover-text-main-color' : 'light-gray cursor-default' %>">
            <span class="pr1"><%- __('next') %></span>
            <span class="w1 pl2 ec">▶</span>
        </a>
    </div>
<% } %>