<footer class="bg-1 ph2 ph5-ns pv5">
    <div class="mv8">
        <div class="center tc">
            <% theme.social_platforms.forEach(function(platform) { %>
                <div class="dib mh3">
                    <a class="f3 f2-ns white glow o-70" href="<%- platform.url %>" target="_blank" rel="noopener noreferrer">
                        <i class="ic ic-<%- platform.icon %>"></i>
                    </a>
                </div>
            <% }) %>
        </div>
    </div>
</footer>