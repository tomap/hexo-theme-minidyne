<%
    var title = config.author;
    
    if (page.tag) {
        title = "#" + page.tag;
    }
%>
<!-- Banner -->
<%- partial('_partial/banner.ejs', {
    mainText: title,
    icon: theme.index_icon
}) %>

<!-- Content -->
<div class="w-100 ph2 ph4-m ph5-l mv2 mv5-m mv5-l">
    <div class="content">
        <div class="mw8 center">
            <% page.posts.forEach(function(item, index) { %>
                <%- partial('_partial/article-short', {item: item, index: index}) %>
            <% }); %>
        </div>
    </div>
</div>
