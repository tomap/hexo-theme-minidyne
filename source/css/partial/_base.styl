.bg-1
  background $gradient-color-1
  background linear-gradient(to right, $gradient-color-1 0%, $gradient-color-2 100%)

.hover-b-mc
  transition all 0.3s cubic-bezier(.25,.8,.25,1)
  &:hover
    border-color $main-color

@media print
  nav, footer, .comment
    display none !important
  @page
    margin 0
  body
    margin 1cm

/* emoji / ascii icons */
.ec
  -moz-osx-font-smoothing grayscale
  filter sepia(90%)

  &.ec-mono
    color transparent
    text-shadow 0 0 0 $main-color
    filter none