.bg-1
  background $gradient-color-1
  background linear-gradient(to right, $gradient-color-1 0%, $gradient-color-2 100%)

.hover-border-main-color
  transition all 0.3s cubic-bezier(.25,.8,.25,1)
  &:hover
    border-color $main-color

.hover-text-main-color
  transition all 0.3s cubic-bezier(.25,.8,.25,1)
  &:hover
    color $main-color

.cursor-default
  cursor default

 @media print
    nav, footer 
      display none !important

@media screen and (min-width: 60em) {
  .pr7p-l {
      padding-right: 11rem;
  }
}

/* emoji / ascii icons */
.ec
    -moz-osx-font-smoothing grayscale
    filter sepia(90%)

    &.ec-mono
      color transparent
      text-shadow 0 0 0 $main-color
      filter none